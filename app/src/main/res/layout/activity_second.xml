<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/nameTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewID"
        app:layout_constraintStart_toStartOf="@+id/imageViewID"
        app:layout_constraintTop_toBottomOf="@+id/imageViewID" />

    <TextView
        android:id="@+id/emailTextViewID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/nameTextViewID"
        app:layout_constraintStart_toStartOf="@+id/nameTextViewID"
        app:layout_constraintTop_toBottomOf="@+id/nameTextViewID" />

    <ImageView
        android:id="@+id/imageViewID"
        android:layout_width="231dp"
        android:layout_height="249dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>